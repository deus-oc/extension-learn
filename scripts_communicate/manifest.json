{
    "manifest_version": 2,
    "name": "scripts test",
    "description": "communicate between two background scripts",
    "version": "1.1",
    "icons": {
        "64": "./icons/icon.png"
    },
    "background": {
        "scripts": ["bg.js"]
    },
    "browser_action": {
        "default_icon": "./icons/icon.png",
        "default_title": "Notifier",
        "default_popup": "index.html"
    },
    "permissions":["notifications"],
    "content_scripts": [
        {
            "matches": "<all_ursl>",
            "scripts": ["body.js"]
        }
    ],
    "page_action": {
        "default_icon": "./icons/icon.png"
    }
}